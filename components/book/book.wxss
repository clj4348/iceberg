.container{
  display: flex;
  flex-wrap: wrap;
  width: 640rpx;
  margin: auto;
}

.book-components{
  position: relative;
  width: 240rpx;
  height: 360rpx;
  overflow: hidden;
  border-radius: 6rpx;
  margin: 40rpx;
}
.book-image{
  display: block;
  width: 100%;
  height: 100%;
}
.book-text{
  position: absolute;
  bottom: 0;
  width: 100%;
  box-sizing: border-box;
  padding:10rpx 15rpx 10rpx 15rpx;
  background: #fff;
}
.title,.author{
  font-size: 24rpx;
  display: block;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.title{
  color: #212121;
}
.author{
  margin-top: 6rpx;
  color: #999;
}
.favor{
  margin-top: 20rpx;
  float: right;
  font-size: 24rpx;
  color: #999;
}