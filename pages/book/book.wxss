.mask{
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  background: #f5f5f5;
  z-index: -1;
}
.book-container{
  padding-top: 100rpx;
}
.quality{
  display: block;
  width: 100rpx;
  height: 32rpx;
  margin:30rpx auto 0;
}
.search-container{
  position: fixed;
  top: 0;
  box-sizing: border-box;
  width: 100%;
  height: 100rpx;
  padding:0 30rpx;
  display: flex;
  z-index: 100;
  flex-direction: row;
  align-items: center;
  background: #fff;
  border-top: 1px solid #e5e5e5;
  border-bottom: 1px solid #e5e5e5;
}
.search-content{
  display: flex;
  width: 100%;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 70rpx;
  background: #f2f2f2;
  border-radius: 50rpx;
}
.search-icon{
  width: 32rpx;
  height: 32rpx;
  margin-right: 30rpx;
}

.search-text{
  color: #666;
  font-size: 32rpx;
}

.book-wraper{
  display: flex;
  flex-wrap: wrap;
  width: 640rpx;
  margin: auto;
}